@model IEnumerable<rentaLax.Models.ItemType>

@{
    ViewData["Title"] = "Add Item Types";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abbreviation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abbreviation)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ItemTypeId" class="btn btn-primary">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.ItemTypeId" class="btn btn-danger">Delete</a> |
                    <a asp-action="Details" asp-route-id="@item.ItemTypeId" class="btn btn-primary">Details</a> |
                    
            </td>
        </tr>
}
    </tbody>
</table>
